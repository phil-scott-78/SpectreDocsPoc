@using System.Collections.Immutable
@using MyLittleContentEngine.Services.Content.TableOfContents
@inherits LayoutComponentBase
@inject ITableOfContentService TableOfContentService
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-base-50 dark:bg-base-950">
    <SharedHeader CurrentSection="@_currentSection" HasTableOfContents="@(_toc is { Count: > 0 })" ShowSidebarToggle="true" ShowSearch="true" />

    <!-- Main Content Area -->
    <div class="w-full max-w-[98rem] transition-[padding] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar -->
            @if (_toc is { Count: > 0 })
            {
                <aside class="hidden lg:block lg:w-64 xl:w-72 shrink-0">
                    <div class="sticky top-16 scrollbar-gutter-thumb-900 dark:scrollbar-thin dark:scrollbar-thumb-base-700 dark:scrollbar-track-base-950 overflow-y-auto max-h-[calc(100vh-4rem)] pr-4 -mr-4">
                        <div class="py-8">
                            <TableOfContentsNavigation TableOfContents="@_toc" Section="@_currentSection"/>
                        </div>
                    </div>
                </aside>


                <!-- Mobile Sidebar Overlay -->
                <div id="sidebar-overlay" class="lg:hidden fixed inset-0 z-40 hidden bg-black/50 backdrop-blur">
                    <div id="sidebar-panel" class="fixed inset-y-0 top-16 left-0 w-92 bg-white dark:bg-base-900 shadow-xl overflow-y-auto dark:scrollbar-thin dark:scrollbar-thumb-base-700 dark:scrollbar-track-base-900">
                        <div class="p-4">
                            <button id="sidebar-close" class="mb-4 p-2 rounded-md hover:bg-base-100 dark:hover:bg-base-800 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                            <TableOfContentsNavigation TableOfContents="@_toc" Section="@_currentSection"/>
                        </div>
                    </div>
                </div>
            }

            <!-- Main Content -->
            <main class="flex-1 min-w-0 py-8 ">
                <div class="bg-white dark:bg-base-900 rounded-lg shadow-sm border border-base-200 dark:border-base-800">
                    <div class="p-6 lg:p-8">
                        @Body
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

@code{
    private ImmutableList<NavigationTreeItem>? _toc;
    private string _currentSection = "";

    protected override async Task OnInitializedAsync()
    {
        var currentPath = NavigationManager.ToAbsoluteUri(NavigationManager.Uri).AbsolutePath;

        // Determine the current section based on URL
        if (currentPath.StartsWith("/console", StringComparison.OrdinalIgnoreCase))
        {
            _currentSection = "Console";
        }
        else if (currentPath.StartsWith("/cli", StringComparison.OrdinalIgnoreCase))
        {
            _currentSection = "Cli";
        }
        else
        {
            _currentSection = "";
        }

        // Get the table of contents for the current section
        if (!string.IsNullOrEmpty(_currentSection))
        {
            _toc = (await TableOfContentService.GetNavigationTocAsync(currentPath, _currentSection)).First().Items.ToImmutableList();
        }

        await base.OnInitializedAsync();
    }
}